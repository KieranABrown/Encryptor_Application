<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dESDecrypt">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Enter Text for Decryption"
        android:inputType="textMultiLine"
        android:singleLine="false"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="61dp" />

    <Button
        android:id="@+id/paste"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decryptBut"
        android:layout_alignBottom="@+id/decryptBut"
        android:layout_alignLeft="@+id/inputText"
        android:layout_alignStart="@+id/inputText"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:onClick="pasteText"
        android:text="Paste" />

    <Button
        android:id="@+id/decryptBut"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/inputText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/inputText"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Decrypt"
        android:onClick="decryptText" />

</RelativeLayout>
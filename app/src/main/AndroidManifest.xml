<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kiera.encryptor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Encrypted" android:screenOrientation="portrait"/>
        <activity android:name=".CaesarEncrypt" android:screenOrientation="portrait"/>
        <activity android:name=".CaesarDecrypt" android:screenOrientation="portrait"/>
        <activity android:name=".Decrypted" android:screenOrientation="portrait"/>
        <activity android:name=".dataEncryptionCipher" android:screenOrientation="portrait"/>
        <activity android:name=".dESDecrypt" android:screenOrientation="portrait" />
    </application>

</manifest>